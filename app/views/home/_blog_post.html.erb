<% @blog_posts.each do |blog_post| %>
  <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl m-4">
    <div class="p-4">
      <div class="uppercase tracking-wide text-sm text-blue-700 font-semibold"><%= blog_post.title %></div>
      <p class="block mt-1 text-lg leading-tight font-medium text-black"><%= blog_post.body %></p>
      <p class="mt-2 text-gray-500"><%= blog_post.created_at.strftime("%B %e, %Y") %></p>
    </div>
  </div>
<% end %>
