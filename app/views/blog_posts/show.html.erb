<div class="max-w-4xl mx-auto mt-10 mx-8 border p-8 rounded-lg">
  <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= @blog_post.title %></h1>
  <p class="text-lg text-gray-700 mb-4"><%= @blog_post.body %></p>
  <p class="text-gray-600 mb-6"><%= @blog_post.created_at.strftime("%B %e, %Y") %></p>
  <%= link_to 'Edit', edit_blog_post_path(@blog_post), class: "rounded bg-green-600 px-4 py-2 text-sm font-medium text-white shadow hover:bg-green-700 focus:outline-none focus:ring active:bg-green-500 uppercase mt-4" %>
</div>
<div class="text-center max-w-4xl mx-auto mt-10 mx-8  p-8 ">
  <%= link_to 'Back to All Posts', root_path, class: "rounded bg-blue-600 px-12 py-3 text-sm font-medium text-white shadow hover:bg-blue-700 focus:outline-none focus:ring active:bg-blue-500 sm:w-auto uppercase" %>
</div>
