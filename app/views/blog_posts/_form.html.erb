<%= form_with model: blog_post, class: "max-w-4xl mx-auto " do |form| %>
  <div class="mb-6 mx-4">
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="mb-6 mx-4">
    <%= form.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :body, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", rows: 10 %>
  </div>
  <% if form.object.errors.any? %>
    <div id="error_explanation" class="bg-red-100 mx-4 border mb-4 border-red-300 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Oops! Something went wrong:</strong>
      <span class="block sm:inline">Please check the following errors.</span>
      <ul class="list-disc list-inside">
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.button "Save Post", class: "bg-blue-500 mx-4 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
<% end %>
